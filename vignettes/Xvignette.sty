\newcommand{\vignetteSource}[2]{
  \def\Fpath{#1}
  \def\argtwo{#2}
  \def\empty{}

  \ifx \argtwo \empty
  %%\def\Fname{\basename{\Fpath}} %%DONOT
  \def\Fname{\Fpath}
  \else
  \def\Fname{\argtwo}  
  \fi
    
  \ifx \Fname \empty
  \def\scaption{Source code of ``\Fpath''.}
  \else
  \def\scaption{\Fname}
  \fi
  
  \begin{source}
    \VerbatimInput[numbers=left,
      frame=single,
      label=\scaption]{\Fpath}
    %\caption{\scaption}
    \label{src:\Fname}
  \end{source}
}


